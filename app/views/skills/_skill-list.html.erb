 <h3 class="text-center"><%= @skills.length %> teachers in your area </h3>

<div class="skill-list">
  <% skills.each do |skill| %>
  <div class="skill-list-card">

    <div class=list-card-left>
      <%= image_tag teacher_photo(skill)  %>
      <p><strong><%= skill.category %></strong></p>
      <p class="font-small">$<%= skill.price %>/hour</p>
      <p class="font-small">Add rating here!</p>
    </div>
    <div class="end">
      <p> Hi I'm <%= skill.teacher.first_name %></p>
      <p> I teach <%= skill.name %></p>
      <p class="font-small"><%= skill.teacher.bio %></p>
      <%= link_to "Learn with me",skill_path(skill), class: "btn btn-primary"  %>
    </div>
  </div>
  <% end %>
</div>
