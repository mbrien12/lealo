
<div class="reviews-form user-messages new-message">
  <h5>Leave a review for <%= skill.teacher.name %> and their skills in teaching <%= skill.name %></h5>

  <%= simple_form_for([ skill, review ]) do |form| %>
    <%= form.input :comment, as: :text %>
    <%= form.input :rating,  as: :radio_buttons, collection: 1..5 %>
    <%= form.button :submit %>
  <% end %>
</div>



